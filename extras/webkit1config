# Aliases
alias sc "nset s.enable-scripts"
alias ja "nset s.enable-java-applet"
alias fcz "nset v.full-content-zoom"
alias sca "nset soup.ssl-use-system-ca-file"

# Settings
nset s.enable-java-applet f
nset s.enable-spell-checking t
nset s.spell-checking-languages en_US,en_GB
nset s.default-monospace-font-size 9
nset s.minimum-font-size 7
nset v.full-content-zoom t
nset soup.max-conns 64
nset soup.max-conns-per-host 16

# Hooks
nset hook.create "{hook.create};fcz t"
